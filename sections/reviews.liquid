
<div class="custom_reviews_sec">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="custom_review_heading">
        <h3>{{ section.settings.heading }}</h3>
      </div>
    {% endif %}

    <!-- desktop -->
{% if section.settings.enable_slider %}
    <div class="custom_review_slider">
      <div class="reviews_list">
        {% for block in section.blocks %}
          {% if block.settings.title != blank %}
            <div class="review_slide">
              <div class="review_stars">
                <svg xmlns="http://www.w3.org/2000/svg" width="142" height="24" viewBox="0 0 142 24" fill="none">
                  <path d="M12 0L14.6942 8.2918H23.4127L16.3593 13.4164L19.0534 21.7082L12 16.5836L4.94658 21.7082L7.64074 13.4164L0.587322 8.2918H9.30583L12 0Z" fill="#FF843E"/>
                  <path d="M42 0L44.6942 8.2918H53.4127L46.3593 13.4164L49.0534 21.7082L42 16.5836L34.9466 21.7082L37.6407 13.4164L30.5873 8.2918H39.3058L42 0Z" fill="#FF843E"/>
                  <path d="M71 0L73.6942 8.2918H82.4127L75.3593 13.4164L78.0534 21.7082L71 16.5836L63.9466 21.7082L66.6407 13.4164L59.5873 8.2918H68.3058L71 0Z" fill="#FF843E"/>
                  <path d="M100 0L102.694 8.2918H111.413L104.359 13.4164L107.053 21.7082L100 16.5836L92.9466 21.7082L95.6407 13.4164L88.5873 8.2918H97.3058L100 0Z" fill="#FF843E"/>
                  <path d="M130 0L132.694 8.2918H141.413L134.359 13.4164L137.053 21.7082L130 16.5836L122.947 21.7082L125.641 13.4164L118.587 8.2918H127.306L130 0Z" fill="#FF843E"/>
                </svg>
              </div>
              <div class="slide_content">
                <h5>{{ block.settings.title }}</h5>
                <p>{{ block.settings.description }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
          {% endif %}          
<!-- product-desktop-->
                    
                 {% if section.settings.enable_slider1 %}  
      <div class="product_review_slider">
        <div class="product_reviews_slide_list">
             {% for block in section.blocks %}
          {% if block.settings.title != blank %}
          <div class="m_block">
          {% assign displayed_titles = "" %}
{% assign slide_count = 0 %}
{% for block in section.blocks %}
    {% unless slide_count >= 3 or displayed_titles contains block.settings.title %}
        {% if block.settings.title != blank %}
            {% assign displayed_titles = displayed_titles | append: block.settings.title | append: ";" %}
            {% assign slide_count = slide_count | plus: 1 %}
            <div class="review_slide"  data-index="{{ forloop.index }}">
                <div class="review_stars">
                    <svg xmlns="http://www.w3.org/2000/svg" width="142" height="24" viewBox="0 0 142 24" fill="none">
                        <path d="M12 0L14.6942 8.2918H23.4127L16.3593 13.4164L19.0534 21.7082L12 16.5836L4.94658 21.7082L7.64074 13.4164L0.587322 8.2918H9.30583L12 0Z" fill="#FF843E"/>
                        <path d="M42 0L44.6942 8.2918H53.4127L46.3593 13.4164L49.0534 21.7082L42 16.5836L34.9466 21.7082L37.6407 13.4164L30.5873 8.2918H39.3058L42 0Z" fill="#FF843E"/>
                        <path d="M71 0L73.6942 8.2918H82.4127L75.3593 13.4164L78.0534 21.7082L71 16.5836L63.9466 21.7082L66.6407 13.4164L59.5873 8.2918H68.3058L71 0Z" fill="#FF843E"/>
                        <path d="M100 0L102.694 8.2918H111.413L104.359 13.4164L107.053 21.7082L100 16.5836L92.9466 21.7082L95.6407 13.4164L88.5873 8.2918H97.3058L100 0Z" fill="#FF843E"/>
                        <path d="M130 0L132.694 8.2918H141.413L134.359 13.4164L137.053 21.7082L130 16.5836L122.947 21.7082L125.641 13.4164L118.587 8.2918H127.306L130 0Z" fill="#FF843E"/>
                    </svg>
                </div>
                <div class="slide_content">
                    <h5>{{ block.settings.title }}</h5>
                    <p>{{ block.settings.description }}</p>
                </div>
            </div>
        {% endif %}
    {% endunless %}
{% endfor %}

                  </div>
          {% endif %}
        {% endfor %}
         </div>        
      </div>    
 
      <!-- mobile-product-->


       <div class="product_mobile_review_slider">
        <div class="mobile_slide_list">
            {% for block in section.blocks %}
          {% if block.settings.title != blank %}
          <div class="m_block">
          {% assign displayed_titles = "" %}
{% assign slide_count = 0 %}
{% for block in section.blocks %}
    {% unless slide_count >= 2 or displayed_titles contains block.settings.title %}
        {% if block.settings.title != blank %}
            {% assign displayed_titles = displayed_titles | append: block.settings.title | append: ";" %}
            {% assign slide_count = slide_count | plus: 1 %}
            <div class="review_slide"  data-index="{{ forloop.index }}">
                <div class="review_stars">
                    <svg xmlns="http://www.w3.org/2000/svg" width="142" height="24" viewBox="0 0 142 24" fill="none">
                        <path d="M12 0L14.6942 8.2918H23.4127L16.3593 13.4164L19.0534 21.7082L12 16.5836L4.94658 21.7082L7.64074 13.4164L0.587322 8.2918H9.30583L12 0Z" fill="#FF843E"/>
                        <path d="M42 0L44.6942 8.2918H53.4127L46.3593 13.4164L49.0534 21.7082L42 16.5836L34.9466 21.7082L37.6407 13.4164L30.5873 8.2918H39.3058L42 0Z" fill="#FF843E"/>
                        <path d="M71 0L73.6942 8.2918H82.4127L75.3593 13.4164L78.0534 21.7082L71 16.5836L63.9466 21.7082L66.6407 13.4164L59.5873 8.2918H68.3058L71 0Z" fill="#FF843E"/>
                        <path d="M100 0L102.694 8.2918H111.413L104.359 13.4164L107.053 21.7082L100 16.5836L92.9466 21.7082L95.6407 13.4164L88.5873 8.2918H97.3058L100 0Z" fill="#FF843E"/>
                        <path d="M130 0L132.694 8.2918H141.413L134.359 13.4164L137.053 21.7082L130 16.5836L122.947 21.7082L125.641 13.4164L118.587 8.2918H127.306L130 0Z" fill="#FF843E"/>
                    </svg>
                </div>
                <div class="slide_content">
                    <h5>{{ block.settings.title }}</h5>
                    <p>{{ block.settings.description }}</p>
                </div>
            </div>
        {% endif %}
    {% endunless %}
{% endfor %}

                  </div>
          {% endif %}
        {% endfor %}
          
         </div>        
      </div>    

                    
       {% endif %}               
  </div>
</div>

{% schema %}
 {
    "name": "Review",
    "settings": [
       {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "Enable Slider"
    },
        {
      "type": "checkbox",
      "id": "enable_slider1",
      "label": "Multiple Slider"
    },
        {
            "type": "text",
            "id": "sec_review",
            "default": "Slider_bar_heading",
            "label": "Section Class"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Main Heading"
        }
    ],
      "blocks": [
        {
          "type": "add-review",
          "name": "Review",
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "textarea",
              "id": "description",
              "label": "Description"
            }
          ]
        }
      ],
    "presets": [
        {
            "name": "Review"
        }
    ]
}
{% endschema %}
